<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2>Errors:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= link_to users_path, class: 'btn btn-outline-primary' do %>
      <i class="fa fa-arrow-left" aria-hidden="true"></i>
      Back
    <% end %>

    <%= form.button class: 'btn btn-outline-primary ml-2' do %>
      <i class="fa fa-save" aria-hidden="true"></i>
      Save
    <% end %>
  </div>

  <div class='mt-3'>
    <div class="form-group row">
      <div class="col-sm-3">
        <%= form.label :name, class: "col-form-label" %>
      </div>
      <div class="col-sm-9">
        <%= form.text_field :name, maxlength: 50, class: "form-control" %>
      </div>  
    </div>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= form.label :email, class: "col-form-label" %>
      </div>
      <div class="col-sm-9">
        <%= form.email_field :email, maxlength: 100, autocomplete: "email", class: "form-control" %>
      </div>  
    </div>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= form.label :password, class: "col-form-label" %>
      </div>
      <div class="col-sm-9">
        <%= form.password_field :password, maxlength: Devise.password_length.max, class: "form-control" %>
      </div>  
    </div>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= form.label 'Confirm password', class: "col-form-label" %>
      </div>
      <div class="col-sm-9">
        <%= form.password_field :password_confirmation, maxlength: Devise.password_length.max, class: "form-control" %>
      </div>  
    </div>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= form.label :role, class: "col-form-label" %>
      </div>
      <div class="col-sm-9">
        <%= form.select :role, User.roles.keys.to_a, {}, { class: "form-control" } %>
      </div>  
    </div>
  </div>
<% end %>
