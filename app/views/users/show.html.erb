<div class="actions">
  <%= link_to users_path, class: 'btn btn-outline-primary' do %>
    <i class="fa fa-arrow-left"></i>
    Back
  <% end %>

  <%= link_to edit_user_path(@user), class: 'btn btn-outline-primary ml-2' do %>
    <i class="fa fa-edit"></i>
    Edit
  <% end %>

  <%= link_to user_path(@user), class: 'btn btn-outline-primary ml-2', method: :delete, data: { confirm: 'Are you sure?' } do %>
    <i class="fas fa-trash-alt"></i>
    Delete
  <% end %>
</div>

<div class="mt-3">
  <div class="form-group row">
    <div class="col-sm-3 text-right font-weight-bold">Name</div>
    <div class="col-sm-9">
      <%= @user.name %>
    </div>  
  </div>

  <div class="form-group row">
    <div class="col-sm-3 text-right font-weight-bold">Email</div>
    <div class="col-sm-9">
      <%= @user.email %>
    </div>  
  </div>

  <div class="form-group row">
    <div class="col-sm-3 text-right font-weight-bold">Password</div>
    <div class="col-sm-9">
      ********
    </div>  
  </div>

  <div class="form-group row">
    <div class="col-sm-3 text-right font-weight-bold">Role</div>
    <div class="col-sm-9">
      <%= @user.role %>
    </div>  
  </div>
</div>
