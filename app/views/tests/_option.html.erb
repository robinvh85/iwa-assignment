<div class="option-fields pl-5 pr-5">
  <div class="d-flex mt-2">
    <div style="width: 20px;" class="mt-1 option-index"><%= f.index + 1 %></div>
    <div class="flex-grow-1 ml-2">
      <%= f.hidden_field :id %>
      <%= f.text_field :content, maxlength: 50,
        class: "form-control", placeholder: "Give the option a content here ..." %>
    </div>
    <div class="form-check mt-1">
      <%= f.check_box :is_correct, id: "#{f.object_name}" %>
      <label for="<%= "#{f.object_name}"%>">Correct answer</label>
    </div>
    <div>
      <%= f.hidden_field :_destroy, class: 'hidden-destroy' %>
      <%= link_to '#', class: 'remove-record form-control remove-option' do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  </div>
</div>
