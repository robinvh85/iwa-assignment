<hr class="mt-4 mb-4" />

<div class="question-fields">
  <div class="d-flex">
    <div class="flex-grow-1">
      <%= f.hidden_field :id %>
      <%= f.text_field :content, maxlength: 50,
        class: "form-control", placeholder: "Give the question a label here ..." %>
    </div>
    <div>
      <%= f.hidden_field :_destroy %>
      <%= link_to '#', class: 'remove-record form-control remove-question' do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  </div>
  <div class="form-group row mt-2 mb-1">
    <div class="col-sm-12">
      <%= f.text_area :description, class: "form-control",
       placeholder: "Enter a description here ...",
       rows: 3 %>
    </div>
  </div>

  <div class="option-form container-form mt-1">
    <%= f.fields_for :options do |option_form| %>
      <%= render 'option', f: option_form %>
    <% end %>
  </div>
  <%= link_to_add_option('Option', f, class: 'btn btn-outline-primary mt-2')  %>
</div>
